<Layout title="Bookshelf">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold mb-12">Bookshelf</h1>
    
    <h2 class="text-2xl font-bold mb-8">Current Top 3</h2>
    <div class="space-y-8 mb-16">
      {currentTop3.map(book => (
        <div class="flex gap-6 p-4 rounded-lg hover:bg-gray-50 transition-colors">
          <a 
            href={book.goodreadsLink} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="flex-shrink-0 w-32 transition-transform hover:scale-105"
          >
            <img 
              src={book.cover} 
              alt={book.title}
              class="w-full rounded-lg shadow-md"
            />
          </a>
          <div class="flex-1">
            <a 
              href={book.goodreadsLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block hover:text-gray-600"
            >
              <h2 class="text-xl font-semibold mb-2">{book.title}</h2>
            </a>
            <p class="text-gray-600 leading-relaxed">{book.description}</p>
          </div>
        </div>
      ))}
    </div>

    <h2 class="text-2xl font-bold mb-8">Books I've Read</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 mb-16">
      {readBooks.map(book => (
        <div class="text-center">
          <a 
            href={book.goodreadsLink} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-block transition-transform hover:scale-105"
          >
            <img 
              src={book.cover} 
              alt={book.title}
              class="w-full rounded-lg shadow-md mb-2"
            />
            <h3 class="text-sm font-medium">{book.title}</h3>
          </a>
        </div>
      ))}
    </div>

    <h2 class="text-2xl font-bold mb-8">To Read Books</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
      {toReadBooks.map(book => (
        <div class="text-center">
