---
import SocialButton from './SocialButton.astro';

interface Props {
  name: string;
  subtitle: string;
  photoUrl: string;
  socials: Array<{
    label: string;
    url: string;
  }>;
}

const { name, subtitle, photoUrl, socials } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 bg-white z-50 pt-8 pb-4">
  <div class="max-w-3xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center gap-6">
        <img
          src={photoUrl}
          alt={name}
          class="w-24 h-24 rounded-full object-cover border-2 border-gray-200"
        />
        <div class="flex-1">
          <h1 class="text-2xl font-bold text-gray-900">{name}</h1>
          <p class="text-gray-600 mt-1 mb-4">{subtitle}</p>
          <div class="flex gap-3">
            {socials.map(social => (
              <SocialButton href={social.url} label={social.label} />
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>